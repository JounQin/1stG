$grid-size = 320px
$content-size = round($grid-size / sqrt(2))
$bg-size = $content-size * 2

.grid
  absolute()
  left 50%
  top $grid-size
  display block
  size $grid-size
  transform translate3d(-50%, -50%, 0) rotate(45deg)
  overflow hidden

  button
    &:active, &:focuse, &:hover
      outline none
      box-shadow none

  &:after
    middleCenter(, rotate(-45deg))
    size $bg-size
    content ''
    opacity 0
    z-index -1
    transition opacity 1s
    background-size cover

  &:hover
    &:after
      opacity .5

    button
      background-color #fff

    .border-t
      right 8px

    .border-b
      left 8px

    .border-r
      bottom 8px

    .border-l
      top 8px

.github
  size ($grid-size / 2)
  margin-left 0 - $content-size
  margin-top 0 - ($content-size / 2)
  background-color #fad957

  &:after
    size $grid-size

  img
    size 60px

  h2
    font-size 16px
    font-weight 500

.vue
  background-color #1496bf

  &:hover button
    color #3ea8ca

  &:after
    background-image url("./site1.png")

.hi
  margin-left 0 - $content-size
  margin-top $content-size
  background-color #eb584b

  &:hover button
    color #eb584b

  &:after
    background-image url("./site2.png")

.blog
  margin-left 1 + $content-size
  margin-top $content-size
  background-color #c465bb

  &:hover button
    color #c465bb

  &:after
    background-image url("./site3.png")

.border
  absolute()
  overflow hidden
  background rgba(255, 255, 255, .5)
  transition all 1s linear

.border-t,
.border-b
  height 1px

.border-r,
.border-l
  width 1px

.border-t
  top 8px
  right 100%
  left 8px

.border-b
  bottom 8px
  right 8px
  left 100%

.border-r
  top 8px
  bottom 100%
  right 8px

.border-l
  top 100%
  bottom 8px
  left 8px

.content
  middleCenter(, rotate(-45deg))
  size $content-size
  text-align center

.wrapper
  middleCenter()

  button
    border 1px solid #fff
    border-radius 0
    size 180px 50px
    margin-top 10px
    transition all 1s linear
    background-color transparent
