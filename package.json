{
  "name": "1stg",
  "version": "0.0.1",
  "description": "Server Rendered Static Homepage Website powered by Technology Stack Of React",
  "repository": "git@github.com:JounQin/1stg.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env DEBUG=1stg:* NODE_ENV=development babel-node server",
    "build:react:client": "webpack --config=build/react.client.babel.js --colors --progress",
    "build:react:server": "webpack --config=build/react.server.babel.js --colors --progress",
    "build:server": "webpack --config build/server.babel.js --colors --progress",
    "build:template": "mkdir -p dist/static && node build/template.js",
    "build": "rimraf dist && cross-env DEBUG=1stg:* NODE_ENV=production run-p build:react:client build:react:server build:server build:template",
    "start": "cross-env DEBUG=1stg:* NODE_ENV=production node dist/server",
    "sync:static": "bash build/sync-static.sh",
    "lint": "eslint . --ignore-path .gitignore --max-warnings=10"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ]
  },
  "browserslist": "> 1% in CN",
  "eslintConfig": {
    "extends": [
      "1stg/react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "__DEV__": false,
      "__SERVER__": false
    },
    "parserOptions": {
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    },
    "settings": {
      "react": {
        "version": "16"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --max-warnings=10 --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "anujs": "^1.4.9",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "koa": "^2.6.2",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.0",
    "koa-static-cache": "^5.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.7.0",
    "react-server-renderer": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "autoprefixer": "^9.4.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.21",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.12.0",
    "eslint-config-1stg": "^3.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.14.2",
    "file-loader": "^3.0.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-minifier": "^3.5.21",
    "husky": "^1.3.1",
    "imagemin": "^6.1.0",
    "img-loader": "^3.0.1",
    "koa-webpack": "^5.2.1",
    "lint-staged": "^9.0.2",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.12.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "postcss-plugin-px2rem": "^0.8.1",
    "prettier": "^1.15.3",
    "prop-types": "^15.6.2",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "react-hot-loader": "^4.12.3",
    "react-style-loader": "^2.3.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "url-loader": "^1.1.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
